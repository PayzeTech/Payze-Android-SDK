<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/editTextWithTitleTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:textColor="@color/lb_primary"/>

    <LinearLayout
        android:id="@+id/editTextWithTitleContainer"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/bkg_edit_text_input"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingStart="12dp"
        android:paddingEnd="4dp">

        <EditText
            android:id="@+id/editTextWithTitleInput"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:imeOptions="actionGo"
            android:includeFontPadding="false"
            android:singleLine="true"
            android:layout_marginVertical="8dp"
            android:textColorHint="@color/lb_secondary"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/editTextWithTitleImage"
            android:layout_width="46dp"
            android:layout_height="22dp"
            android:layout_marginStart="10dp"
            android:visibility="gone" />

    </LinearLayout>

    <TextView
        android:id="@+id/editTextWithTitleBottomMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:includeFontPadding="false"
        android:textSize="12sp"
        android:textColor="@color/negative"
        android:visibility="gone" />

</LinearLayout>