<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="EditTextWithTitle">

        <attr name="inputTitle" format="string"/>
        <attr name="inputTitleShow" format="boolean"/>

        <attr name="inputBottomMessage" format="string"/>

        <attr name="inputPrefix" format="string"/>
        <attr name="inputHint" format="string"/>
        <attr name="inputLast" format="string"/>

        <attr name="inputTextColor" format="reference|color"/>
        <attr name="inputBottomHintColor" format="reference|color"/>

        <attr name="inputHintTextColor" format="reference|color"/>
        <attr name="inputTextLength" format="integer"/>
        <attr name="inputEditable" format="boolean"/>
        <attr name="inputWhiteBackground" format="boolean"/>
        <attr name="inputRightActionIcon" format="reference"/>

        <attr name="inputTextType" format="enum">
            <enum name="text" value="0"/>
            <enum name="number" value="1"/>
            <enum name="decimal" value="2"/>
            <enum name="password" value="3"/>
            <enum name="email" value="4"/>
            <enum name="phone" value="5"/>
            <enum name="amountInteger" value="6"/>
            <enum name="amountDecimal" value="7"/>
        </attr>

        <attr name="inputImeOption" format="enum">
            <enum name="actionGo" value="0"/>
            <enum name="actionDone" value="1"/>
            <enum name="actionNext" value="2"/>
            <enum name="actionSearch" value="3"/>
        </attr>

    </declare-styleable>

</resources>